// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@types": ["./src/types"],
      "@hooks": ["./src/hooks"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@helpers": ["./src/helpers"],
      "@screens": ["./src/screens"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"]
    }
  }
}
